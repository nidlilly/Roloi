    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <io.esper.roloi.JCalendarMonthView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/jcalendarmonthview"
        app:dayHeight="23sp"
        app:daytextsize="11sp"
        app:datetextsize="12.6sp"
        app:eventtextsize="10sp"
        app:daytextcolor="#787878"
        app:datetextcolor="#000"
        app:datemargintop="10sp"
        android:background="@android:color/white"
        app:linewidth="1.1sp"
        app:linecolor="#EDEDED"
        />

</RelativeLayout>